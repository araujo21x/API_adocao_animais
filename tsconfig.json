{
  "compilerOptions": {

    "target": "es2017",
    "module": "commonjs",
    "lib": ["ES6"],
    "allowJs": true, // utilziar funções sem suporte para ts
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "tests/**/**",
    "jest.config.js",
    "dist"
  ]
}